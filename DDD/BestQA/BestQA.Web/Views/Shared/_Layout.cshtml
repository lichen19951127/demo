<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 基于DDD思想与ENode框架的问答系统</title>

    @Scripts.Render("~/bundles/baseJavascriptBundle")
    @Scripts.Render("~/bundles/angularPlugins")
    @Scripts.Render("~/bundles/jqueryPlugins")

    @Styles.Render("~/Content/bestQACss")
    <script>
        angular.module('bestQA', ['blockUI', 'ngTable', 'ui.pagedown']);
    </script>
</head>
<body ng-app="bestQA">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BestQ&A", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home", null, new { @class = ViewBag.Home })</li>
                    <li>@Html.ActionLink("问题列表", "Index", "Question", null, new {@class = ViewBag.Questions})</li>
                    <li>@Html.ActionLink("我要提问", "Create", "Question", null, new { @class = ViewBag.Create })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Best Question & Answer @@ yubaolee</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
